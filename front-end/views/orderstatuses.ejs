<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.png">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="bg-primary text-light">
    <div class="container mt-1">
        
        <%- include('./partials/navbar.ejs') %>

        <!-- Orderstatus List Table -->
        <h2 class="text-center mb-4 mt-5">Orderstatus List</h2>
        <div class="d-flex justify-content-end mb-1">
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#addOrderstatusModal">+ Add Orderstatus</button>
        </div>
        <table class="table table-light table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th class="text-end pe-3">Options</th>
                </tr>
            </thead>
            <tbody>
                <% orderstatuses.forEach(function(orderstatus) { %> 
                <tr>
                    <td><%= orderstatus.id %></td>
                    <td><%= orderstatus.OrderStatus %></td>
                    <td class="text-end">
                        <button class="btn btn-primary edit-orderstatus-btn" 
                                data-id="<%= orderstatus.id %>" 
                                data-orderstatusname="<%= orderstatus.OrderStatus %>" 
                                data-bs-toggle="modal" data-bs-target="#editOrderstatusModal">
                            Edit
                        </button>
                        <button class="btn btn-danger delete-orderstatus-btn" data-id="<%= orderstatus.id %>">Delete</button>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Add Orderstatus Modal -->
        <div class="modal fade" id="addOrderstatusModal" tabindex="-1" aria-labelledby="addOrderstatusModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content bg-primary">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addOrderstatusModalLabel">Add New Orderstatus</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="addOrderstatusForm">
                            <div class="mb-3">
                                <label for="orderstatusName" class="form-label">Orderstatus Name</label>
                                <input type="text" class="form-control" id="orderstatusName" required>
                            </div>
                            <div class="text-end">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-success">Add Orderstatus</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Orderstatus Modal -->
        <div class="modal fade" id="editOrderstatusModal" tabindex="-1" aria-labelledby="editOrderstatusModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content bg-primary">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editOrderstatusModalLabel">Edit Orderstatus</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="editOrderstatusForm">
                            <div class="mb-3">
                                <label for="editOrderstatusId" class="form-label">ID</label>
                                <input type="text" class="form-control bg-secondary" id="editOrderstatusId" disabled>
                            </div>

                            <div class="mb-3">
                                <label for="editOrderstatusname" class="form-label">Name</label>
                                <input type="text" class="form-control" id="editOrderstatusname">
                            </div>
                            <div class="text-end">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-success">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
<script src="/javascript/orderstatuses.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>